<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatUI.Views.MainPageDetail"
             Title="Detail">
    <StackLayout Padding="10" BackgroundColor="White">
        <Grid Padding="10">
                <Frame BorderColor="Black"
                   CornerRadius="20">
                    <StackLayout Orientation="Horizontal">
                    <Image Source="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png" WidthRequest="66" x:Name="userImage"/>
                        <StackLayout VerticalOptions="Center">
                            <Label
                            TextColor="Black"
                            Text="Aboba"
                            x:Name="userName"
                            VerticalOptions="Center"/>
                            <Label
                            TextColor="Black"
                            Text="Пример текста описания"
                            VerticalOptions="Center"/>
                        </StackLayout>
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTapped"/>
                    </StackLayout.GestureRecognizers>
                </StackLayout>
                </Frame>
            </Grid>
            <Grid Padding="10">
                <Frame BorderColor="Black"
                   CornerRadius="20">
                    <StackLayout Orientation="Horizontal">
                    <Image Source="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png" WidthRequest="66"/>
                        <StackLayout VerticalOptions="Center">
                            <Label
                            TextColor="Black"
                            Text="Имя"
                            VerticalOptions="Center"/>
                            <Label
                            TextColor="Black"
                            Text="Пример текста описания"
                            VerticalOptions="Center"/>
                        </StackLayout>
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTapped"/>
                    </StackLayout.GestureRecognizers>
                </StackLayout>
                </Frame>
            </Grid>
            <Grid Padding="10">
                <Frame BorderColor="Black"
                   CornerRadius="20">
                    <StackLayout Orientation="Horizontal">
                    <Image Source="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png" WidthRequest="66"/>
                        <StackLayout VerticalOptions="Center">
                            <Label
                            TextColor="Black"
                            Text="Имя"
                            VerticalOptions="Center"/>
                            <Label
                            TextColor="Black"
                            Text="Пример текста описания"
                            VerticalOptions="Center"/>
                        </StackLayout>
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTapped"/>
                    </StackLayout.GestureRecognizers>
                </StackLayout>
                </Frame>
            </Grid>
        </StackLayout>
</ContentPage>