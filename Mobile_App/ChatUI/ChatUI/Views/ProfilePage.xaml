<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatUI.Views.ProfilePage"
             BackgroundColor="White">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Image Source="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png`1" WidthRequest="200" HeightRequest="200">
                    <Image.Clip>
                        <EllipseGeometry RadiusX="70" RadiusY="70" Center="180,100"/>
                    </Image.Clip>
                </Image>
                <Label Text="{Binding Path=Rate,
                    StringFormat='Твой рейтинг: {0}'}" HorizontalOptions="Center" TextColor="Black"/>
                <Label Text="{Binding Path=Age,
                    StringFormat='Возраст: {0}'}" HorizontalOptions="Center" TextColor="Black"/>
                <Label Text="{Binding Path=City,
                    StringFormat='Город: {0}'}" HorizontalOptions="Center" TextColor="Black"/>
                <Editor Text="{Binding MyStringProperty}" FontSize="24" TextChanged="EditorTextChanged" TextColor="Black" AutoSize="TextChanges"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>